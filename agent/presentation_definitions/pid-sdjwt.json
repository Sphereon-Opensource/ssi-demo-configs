{
  "id": "pid-sdjwt",
  "name": "Identity verification SD-JWT",
  "purpose": "We need to verify your identity information.",
  "format": {
    "vc+sd-jwt": {
      "sd-jwt_alg_values": [
        "ES256",
        "ES384",
        "ES512",
        "EdDSA"
      ]
    }
  },
  "input_descriptors": [
    {
      "id": "id_example_sd-jwt_for_funke_conformance_test",
      "format": {
        "vc+sd-jwt": {
          "sd-jwt_alg_values": [
            "ES256"
          ],
          "kb-jwt_alg_values": [
            "ES256"
          ]
        }
      },
      "constraints": {
        "fields": [
          {
            "path": [
              "$.given_name"
            ]
          },
          {
            "path": [
              "$.family_name"
            ]
          },
          {
            "path": [
              "$.birthdate"
            ]
          },
          {
            "path": [
              "$.address"
            ]
          },
          {
            "path": [
              "$.nationalities"
            ]
          },
          {
            "path": [
              "$.place_of_birth"
            ]
          },
          {
            "path": [
              "$.birth_family_name"
            ]
          },
          {
            "path": [
              "$.issuing_country"
            ]
          },
          {
            "path": [
              "$.issuing_authority"
            ]
          }
        ],
        "limit_disclosure": "required"
      }
    }
  ]
}
